{
  "manifest_version": 3,
  "name": "bilibili motion page",
  "description": "b站动态页修改",
  "version": "1.1",
  "icons": {
    "128": "bilibili.svg"
  },
  "permissions": [
    "webRequest"
  ],
  "content_scripts":  [
    {
      "js": ["content-script.js"],
      "matches": [
        "https://*.bilibili.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*.bilibili.com/*",
    "https://bilproxy.lushen.click/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "saveResponse.js",
        "indexPage.js",
        "videoLi.css"
      ],
      "matches": [
        "https://*.bilibili.com/*",
        "https://*.hdslb.com/*"
      ]
    }]
}
